rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcı profilleri - sadece kendi profilini okuyabilir/yazabilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Diğer kullanıcılar profilleri okuyabilir
    }
    
    // Hikayeler - herkes okuyabilir, giriş yapmış kullanıcılar yazabilir
    match /stories/{storyId} {
      allow read: if true; // Herkes hikayeleri okuyabilir
      allow create: if request.auth != null; // Giriş yapmış kullanıcılar hikaye oluşturabilir
      allow update: if request.auth != null; // Giriş yapmış kullanıcılar hikaye güncelleyebilir
      allow delete: if request.auth != null && 
        (resource.data.authorId == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Hikaye segmentleri - herkes okuyabilir, giriş yapmış kullanıcılar yazabilir
    match /stories/{storyId}/segments/{segmentId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null && 
        (resource.data.authorId == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
